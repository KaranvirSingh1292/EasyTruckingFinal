@model CommonModels.LoadsModel

@{
    ViewData["Title"] = "Add Loads";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="feature-area mt-5 mb-5">
    <div class="container">
        @if (TempData.ContainsKey("error"))
        {
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @TempData["error"]
                    </div>
                </div>
            </div>
        }
        @if (TempData.ContainsKey("success"))
        {
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="alert alert-success">
                        <strong>Success!</strong> @TempData["success"]
                    </div>
                </div>
            </div>
        }
        <div class="row justify-content-center">
            <partial name="_DispatcherSideBar" />
            <div class="col-md-9 section-title-wrap">

                <h1>Add Load</h1>
                <hr />
                <div class="row">
                    <div class="col-md-12 text-left mt-3">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="Items" class="control-label col-sm-3"></label>
                                <input asp-for="Items" class="form-control col-sm-9" />
                                <span asp-validation-for="Items" class="text-danger col-sm-9 offset-sm-3"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Pickup_Location" class="control-label col-sm-3"></label>
                                <input asp-for="Pickup_Location" class="form-control col-sm-9" />
                                <span asp-validation-for="Pickup_Location" class="text-danger col-sm-9 offset-sm-3"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Drop_Location" class="control-label col-sm-3"></label>
                                <input asp-for="Drop_Location" class="form-control col-sm-9" />
                                <span asp-validation-for="Drop_Location" class="text-danger col-sm-9 offset-sm-3"></span>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Pay" class="control-label col-sm-3"></label>
                                <input asp-for="Pay" class="form-control col-sm-9" />
                                <span asp-validation-for="Pay" class="text-danger col-sm-9 offset-sm-3"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
