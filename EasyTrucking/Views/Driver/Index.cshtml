@model IEnumerable<CommonModels.LoadsModel>

@{
    ViewData["Title"] = "Available Loads";
}

    <section class="feature-area mt-5 mb-5">
        <div class="container">
            @if (TempData.ContainsKey("error"))
            {
                <div class="row">
                    <div class="col-md-8 offset-md-2">
                        <div class="alert alert-danger">
                            <strong>Error!</strong> @TempData["error"]
                        </div>
                    </div>
                </div>
            }
            @if (TempData.ContainsKey("success"))
            {
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="alert alert-success">
                            <strong>Success!</strong> @TempData["success"]
                        </div>
                    </div>
                </div>
            }
            <div class="row justify-content-center">
                <partial name="_DriverSideBar" />
                <div class="col-md-9 text-center section-title-wrap table-responsive">
                    <h1>Available Loads</h1>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Items)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pickup_Location)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Drop_Location)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Pay)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Dispatcher_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created_On)
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sno = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{ sno++; }
                                        @sno
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Items)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pickup_Location)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Drop_Location)
                                    </td>
                                    <td>
                                        $@Html.DisplayFor(modelItem => item.Pay)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dispatcher_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created_On)
                                    </td>
                                    <td>
                                        <form asp-action="AcceptLoad">
                                            <input type="hidden" value="@Html.DisplayFor(modelItem => item.Id)" name="id" />
                                            <input type="submit" value="Accept Load" class="btn btn-primary" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </section>

